---
import Icon from "../components/Icon.astro";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Análisis de correlaciones entre exoplanetas y estrellas anfitrionas descubiertas por el telescopio espacial Kepler",
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="shortcut icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-space-dark text-gray-100 min-h-screen">
    <nav class="bg-space-blue border-b border-gray-800 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a
              href={new URL("/", Astro.url).pathname}
              class="flex items-center gap-2 text-xl font-bold text-accent-blue hover:text-accent-purple transition-colors"
            >
              <Icon name="planet" size={28} class="text-accent-purple" />
              Exoplanetas & Estrellas
            </a>
          </div>
          <div class="flex items-center space-x-6">
            <a
              href={new URL("/", Astro.url).pathname}
              class="flex items-center gap-1 text-gray-300 hover:text-white transition-colors"
            >
              <Icon name="home" size={20} />
              <span>Inicio</span>
            </a>
            <a
              href={new URL("/preguntas", Astro.url).pathname}
              class="flex items-center gap-1 text-gray-300 hover:text-white transition-colors"
            >
              <Icon name="questions" size={20} />
              <span>Preguntas</span>
            </a>
            <a
              href={new URL("/metodologia", Astro.url).pathname}
              class="flex items-center gap-1 text-gray-300 hover:text-white transition-colors"
            >
              <Icon name="methodology" size={20} />
              <span>Metodología</span>
            </a>
            <a
              href={new URL("/resultados", Astro.url).pathname}
              class="flex items-center gap-1 text-gray-300 hover:text-white transition-colors"
            >
              <Icon name="results" size={20} />
              <span>Resultados</span>
            </a>
            <a
              href="https://github.com/Kodamonkey/Proyecto-ciencia-de-datos-WebPage"
              target="_blank"
              class="flex items-center gap-1 text-gray-300 hover:text-white transition-colors"
            >
              <Icon name="code" size={20} />
              <span>Código</span>
            </a>
          </div>
        </div>
      </div>
    </nav>
    <main>
      <slot />
    </main>
    <footer class="bg-space-blue border-t border-gray-800 mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center text-gray-400">
          <p>Proyecto de Ciencia de Datos - IMT2200</p>
          <p class="mt-2 text-sm">Datos del NASA Exoplanet Archive</p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --font-body: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      "Helvetica Neue", Arial, sans-serif;
    --font-display: "Space Grotesk", "Inter", -apple-system, BlinkMacSystemFont,
      "Segoe UI", Roboto, sans-serif;
  }

  html {
    font-family: var(--font-body);
    font-feature-settings: "cv02", "cv03", "cv04", "cv11";
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    margin: 0;
    font-weight: 400;
    letter-spacing: -0.01em;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-display);
    font-weight: 600;
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  h1 {
    font-weight: 700;
    letter-spacing: -0.03em;
  }

  h2 {
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .font-display {
    font-family: var(--font-display);
  }
</style>
